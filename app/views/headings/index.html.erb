<!-- app/views/headings/index.html.erb -->
<h1>Headings and Subheadings</h1>

<div class="container">
  <div class="row">
    <% @headings.each do |category| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header">
            <h2 class="card-title"><%= category.title %></h2>
          </div>
          <div class="card-body">
            <ul class="list-group">
              <% category.subcategories.each do |subcategory| %>
                <li class="list-group-item">
                  <%= link_to subcategory.title, subcategory_path(subcategory), target: "_blank" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

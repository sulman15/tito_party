<h1>Subheading Details</h1>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title"><%= product.title %></h5>
          </div>
          <div class="card-body">
            <% if product.icon.present? %>
              <img src="<%= product.icon %>" alt="Company Logo" class="img-fluid mb-2" />
            <% else %>
              <p>No logo available</p>
            <% end %>
            <p class="card-text"><strong>Company:</strong> <%= product.company_name %></p>
            <p class="card-text"><strong>Details:</strong> <%= product.description %></p>
            <a href="<%= product.url %>" target="_blank">View More</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<h1>Subheading Details</h1>

<div class="container">
  <div class="row">
    <% @cards.each do |card| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title"><%= card[:heading] %></h5>
          </div>
          <div class="card-body">
            <% if card[:logo] %>
              <img src="<%= card[:logo] %>" alt="Company Logo" class="img-fluid mb-2" />
            <% end %>
            <p class="card-text"><strong>Company:</strong> <%= card[:company_name] %></p>
            <p class="card-text"><strong>Details:</strong> <%= card[:details] %></p>
            <a href="<%= card[:href] %>" target="_blank">View More</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

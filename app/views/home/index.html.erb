<h1>Welcome to the Application</h1>

<div class="container">
  <div class="row justify-content-center mb-4">
    <div class="col-md-4 text-center">
      <%= button_to 'Fetch Categories and Subcategories', scrape_categories_path, method: :get, class: 'btn btn-primary btn-lg' %>
    </div>
    <div class="col-md-4 text-center">
      <%= button_to 'Fetch Products', scrape_products_path, method: :get, class: 'btn btn-secondary btn-lg' %>
    </div>
    <div class="col-md-4 text-center">
      <%= link_to 'View Sidekiq', '/sidekiq', class: 'btn btn-info btn-lg' %>
    </div>
    <div class="col-md-4 text-center mt-4">
      <%= button_to 'Export CSV', export_csv_path, method: :get, class: 'btn btn-success btn-lg' %>
    </div>
    <div class="col-md-4 text-center mt-4 hide">
      <%= button_to 'Export Human Resources CSV', export_human_resources_csv_path, method: :get, class: 'btn btn-warning btn-lg', disabled: true %>
    </div>
    <div class="col-md-4 text-center mt-4">
      <%= button_to 'Scrape Human Resources Data', scrape_human_resources_path, class: 'btn btn-primary', method: :get %>
    </div>
  </div>
</div>
